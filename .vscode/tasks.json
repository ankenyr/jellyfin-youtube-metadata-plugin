{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mkdir",
            "type": "shell",
            "command": "mkdir",
            "args": ["-p", "/workspaces/datadir/plugins/youtube-metadata"]
        },
        {
            "label": "cp",
            "type": "shell",
            "command": "cp",
            "args": ["/workspaces/jellyfin-youtube-metadata-plugin/Jellyfin.Plugin.YoutubeMetadata/bin/Debug/net8.0/*", "/workspaces/datadir/plugins/youtube-metadata"]
        },
        {
            "label": "build-plugin",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "dependsOn": ["mkdir", "build-plugin", "cp"],
            "dependsOrder": "sequence"
        }
    ]
}